<div class="container-fluid">
    <div id="home" class="row align-items-center hero scroll_section">
        <div class="col-lg-3 offset-lg-2">
            <h1>Veterinaria Perdriel</h1>
            <p>Su lugar de Elección</p>
        </div>
    </div>
</div>


<div class="row my-3">
    <div id="novedades" class="col-md-5 offset-md-2 py-3 scroll_section">
        <h2>Novedades</h2>
        <ul class="lista-novedades">
            {{#each novedades}}
            <li>
                <a href="#" data-bs-toggle="modal" data-bs-target="#modal{{id}}"><img
                        src="images/novedades1.jpg">{{titulo}}</a>
            </li>
            {{/each}}
        </ul>
    </div>
</div>



<label for="dark-mode" class="dark-mode-button">
    <input id="dark-mode" type="checkbox" onclick="document.documentElement.classList.toggle('dark-mode')">
    Ver modo Oscuro
</label>



{{#each novedades}}
<div class="modal fade" id="modal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">{{titulo}}</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5>{{subtitulo}}</h5>
            </div>
            <div class="modal-body">
                {{cuerpo}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
{{/each}}

